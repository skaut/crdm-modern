{
	"name": "crdm-modern",
	"version": "1.0.2",
	"description": "A modern WordPress theme made for children's organizations",
	"keywords": [
		"wordpress",
		"skaut",
		"crdm",
		"theme",
		"children"
	],
	"homepage": "https://github.com/skaut/crdm-modern",
	"bugs": {
		"url": "https://github.com/skaut/crdm-modern/issues"
	},
	"license": "GPL-3.0-or-later",
	"author": {
		"name": "Marek Dědič",
		"email": "developer@dedic.eu"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/skaut/crdm-modern.git"
	},
	"scripts": {
		"build": "gulp build",
		"lint:css:stylelint": "stylelint src/**/*.css",
		"lint:css": "run-s -c lint:css:*",
		"lint:php:phan": "export PHAN_DISABLE_XDEBUG_WARN=1; vendor/bin/phan",
		"lint:php:phpcs": "vendor/bin/phpcs",
		"lint:php:phpmd": "vendor/bin/phpmd src text phpmd.xml",
		"lint:php": "run-s -c lint:php:*",
		"lint:ts:eslint": "eslint src/**/*.ts gulpfile.js",
		"lint:ts": "run-s -c lint:ts:*",
		"lint": "run-s -c lint:*",
		"update-translations": "gulp update-translations"
	},
	"dependencies": {
		"dripicons": "^2.0.0"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.1",
		"@types/wordpress__customize-browser": "^5.5.0",
		"@typescript-eslint/eslint-plugin": "^4.1.0",
		"@typescript-eslint/parser": "^4.1.1",
		"@wordpress/browserslist-config": "^2.7.0",
		"@wordpress/eslint-plugin": "^7.1.0",
		"eslint": "^7.9.0",
		"eslint-plugin-compat": "^3.8.0",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-concat": "^2.6.1",
		"gulp-inject-string": "^1.1.2",
		"gulp-potomo": "^1.1.0",
		"gulp-rename": "^2.0.0",
		"gulp-shell": "^0.8.0",
		"gulp-terser": "^1.4.0",
		"gulp-typescript": "^6.0.0-alpha.1",
		"gulp-wp-pot": "^2.4.3",
		"merge-stream": "^2.0.0",
		"npm-run-all": "^4.1.5",
		"stylelint": "^13.7.1",
		"stylelint-config-wordpress": "^17.0.0",
		"stylelint-no-unsupported-browser-features": "^4.0.0",
		"typescript": "^4.0.2"
	},
	"browserslist": [
		"extends @wordpress/browserslist-config"
	]
}
